@page "/Courses/Create"
@model CreateCourseModel

<h2>New Course Entry</h2>
<form method="post">
    <div class="mb-3">
        <label class="form-label">Name</label>
        <input type="text" asp-for="Course.Name" class="form-control">
    </div>
    <div class="mb-3">
        <label class="form-label">TextBook</label>
        <input type="text" asp-for="Course.TextBook" class="form-control">
    </div>
    <div class="mb-3">
        <label class="form-label">Credit Hours</label>
        <input type="number" asp-for="Course.CreditHrs" class="form-control">
    </div>
    <button type="submit" class="btn btn-primary"><i class="bi bi-save"></i> Save </button>
</form>